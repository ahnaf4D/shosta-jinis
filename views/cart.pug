extends layouts/layout

block content
  .container.mt-5
    h1.text-center.mb-4 Shopping Cart
    if cart.length
      table.table.table-hover
        thead
          tr
            th Product
            th Price
            th Quantity
            th Total
        tbody
          each item in cart
            tr
              td= item.name
              td $#{item.price}
              td= item.quantity
              td $#{item.price * item.quantity}
      h4.text-end.mt-3 Total: $#{cart.reduce((total, item) => total + (item.price * item.quantity), 0)}
      a.btn.btn-primary(href="/checkout") Proceed to Checkout
    else
      p.text-center Your cart is empty.
