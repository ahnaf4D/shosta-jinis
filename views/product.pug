extends layouts/layout

block content
  .container.mt-5
    h1.text-center.mb-4= product.name
    .row
      .col-md-6
        img.img-fluid(src=product.image alt=product.name)
      .col-md-6
        h3 $#{product.price}
        p= product.description
        a.btn.btn-success(href="/") Back to Store
